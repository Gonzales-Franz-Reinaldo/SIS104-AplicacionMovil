<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonBaseDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_basedatos" />
    <Button
        android:id="@+id/buttonEjercicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_ejercicios" />
    <Button
        android:id="@+id/buttonExamen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_Examen" />
    <Button
        android:id="@+id/buttonGraficos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_grafcios" />
    <Button
        android:id="@+id/buttonSalir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALIR" />



</LinearLayout>